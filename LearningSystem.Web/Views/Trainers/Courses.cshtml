@model IEnumerable<TrainerCoursesModel>

@{
    ViewData["Title"] = "My Courses";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Course name</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Students</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                        </td>
                        <td>@course.StartDate.ToShortDateString()</td>
                        <td>@course.EndDate.ToShortDateString()</td>
                        <td>@course.Students</td>
                        <td class="text-center">
                            <a href="/Trainers/Courses/@course.Id/Students" class="btn btn-warning col-md-12">Grades</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
