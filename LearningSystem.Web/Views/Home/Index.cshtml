@model IEnumerable<CourseListingModel>

@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="jumbotron myjumbotron text-center mb-5">
        <h1>Welcome to our Learning System</h1>
        <p class="text-muted">See our courses below.<p>
    </div>
</div>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://theomcarthur.com/wp-content/uploads/2019/05/course-image-small.png" alt="course">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                    </h5>
                    <p class="card-text text-center">@course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()</p>
                </div>
            </div>
        </div>
    }
</div>
